#!/usr/bin/env bash
# Create an nginx user (if not already created)
useradd -m nginx
# Install Nginx
#apt-get install -y nginx
# Configure Nginx to run as the nginx user
sed -i 's/user www-data;/user nginx;/' /etc/nginx/nginx.conf
# Update Nginx to listen on all active IPs on port 8080
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default
# Restart Nginx to apply the changes
service nginx restart
# Display the current user and Nginx listening status for verification
echo "Current user: $(whoami)"
echo "Nginx is listening on:"
netstat -tuln | grep 8080
